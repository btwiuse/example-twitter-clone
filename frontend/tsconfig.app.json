/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "types": [
            "reflect-metadata"
        ],
        "strictPropertyInitialization": false,
        "paths": {
            "@Typetron/*": [
                "node_modules/@typetron/framework/*"
            ],
            "@Data/Models/*": [
                "../Models/*"
            ],
            "@Data/Forms/*": [
                "../Forms/*"
            ]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts",
        "node_modules/@typetron/framework/Support/*.ts"
    ]
}
